{
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "composer/composer": "^1.8"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4",
        "phpstan/phpstan": "~0.11.15"
    },
    "autoload": {
        "psr-4": {
            "Dependabot\\Composer\\": "src/"
        }
    },
    "scripts": {
        "lint": [
            "phpcs --standard=PSR12 --ignore=vendor ."
        ],
        "stan": "phpstan analyse"
    },
    "config": {
        "sort-packages": true
    }
}
