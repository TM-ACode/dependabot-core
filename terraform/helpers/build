#!/bin/bash

set -e

install_dir=$1
if [ -z "$install_dir" ]; then
  echo "usage: $0 INSTALL_DIR"
  exit 1
fi

if [ ! -d "$install_dir/bin" ]; then
  mkdir -p "$install_dir/bin"
fi

os="$(uname -s | tr '[:upper:]' '[:lower:]')"
github_url="https://github.com/tmccombs/hcl2json"
url="${github_url}/releases/download/v0.3.2/hcl2json_${os}_amd64"
wget -O "$install_dir/bin/hcl2json" "$url"
chmod +x "$install_dir/bin/hcl2json"
